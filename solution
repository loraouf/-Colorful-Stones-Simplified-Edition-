// colorful_stone simplified.cpp : This file contains the 'main' function. Program execution begins and ends there.
//

#include <iostream>
# include<string>
using namespace std;

int main()
{
    string s; cin >> s;
    string t; cin >> t;
    int pos = 0;
    for (int i = 0; i < t.size(); i++) {

        if (s[pos] == t[i]) {
            pos++;
        }
    } cout << pos + 1;

    return 0;
}
// laura ouf
